<script is:inline>
function shuffleArray(array) {
    for (let i = array.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]]; // Swap elements
    }
    return array;
}

let quizzes = [
    { 
        "question": "How can we motivate Ole?",
        "answers": ["juice", "meny fresh juice", "pizza"],
        "correct": "meny fresh juice"
    },
    { 
        "question": "How can we motivate Aggi?",
        "answers": ["ice cream", "kebab", "kare-kare"],
        "correct": "kare-kare"
    },
    { 
        "question": "How can we motivate Nick?",
        "answers": ["ice cream", "cappucino", "chocolates"],
        "correct": "cappucino"
    },
    { 
        "question": "1 + 1?",
        "answers": ["Magellan", "2", "11"],
        "correct": "Magellan"
    }
]

shuffleArray(quizzes); // shuffle the questions

let mainContEl = document.querySelector(".box-cont");
quizzes.map((quiz, index) => {
    shuffleArray(quiz.answers); // shuffle the answers
    let renderEl = `
        <div class="quiz-cont" id="question-${index}">
            <h2>${quiz.question}</h2>
            <ul>
                ${quiz.answers.map((answer, answerIndex) => {
                    return `<li id="choice-${index}${answerIndex}" onclick="handleAnswerChoice(${answerIndex}, ${index});">${answer}</li>`; // Added return statement here
                }).join("")} <!-- Use join("") to convert the array to a string -->
            </ul>
        </div>
    `;

    mainContEl.innerHTML += renderEl;
});

// render the progress bars
let mainProgressContEl = document.querySelector(".progress-bar-ul");
quizzes.map((quiz, index) => {
    let progressEl = `<li id="progress-${index}"></li>`
    mainProgressContEl.innerHTML += progressEl;
})

let score = 0;
let answeredQuestions = 0;

function checkCorrectAnswer(mainElementIDOrClass, elementIDOrClass, correctAnswer) {
    let htmlElement = document.querySelector("#choice-" + mainElementIDOrClass + elementIDOrClass);
    return htmlElement.innerHTML == correctAnswer;
}

function colorChosenAnswer(elementIDOrClass, mainElementIDOrClass) {
    let correctAnswer = quizzes[mainElementIDOrClass].correct;
    let isCorrect = checkCorrectAnswer(mainElementIDOrClass, elementIDOrClass, correctAnswer);
    let choiceEl = document.querySelector("#choice-" + mainElementIDOrClass + elementIDOrClass);
    let progressEl = document.querySelector("#progress-" + mainElementIDOrClass);
    
    if (isCorrect) {
        score++;
        progressEl.setAttribute("style", "background-color: green;");
        choiceEl.setAttribute("style", "border: 2px solid green;");
    } else {
        progressEl.setAttribute("style", "background-color: red;");
        choiceEl.setAttribute("style", "border: 2px solid red;");
    }
}

function handleAnswerChoice(elementIDOrClass, mainElementIDOrClass) {
    let currentEl = document.querySelector("#question-" + mainElementIDOrClass);
    let nextEl = document.querySelector("#question-" + (parseInt(mainElementIDOrClass) + 1));
    let quizLen = quizzes.length;

    answeredQuestions++;
    colorChosenAnswer(elementIDOrClass, mainElementIDOrClass);

    setTimeout(() => {
        currentEl.setAttribute("style", "left: -100%;");
        if (nextEl) {
            nextEl.setAttribute("style", "left: 50%;");
        } else {
            let scoreboardEl = document.getElementById("scoreboard");
            let scoreEl = document.getElementById("score");

            if (score == quizLen) {
                toggleFireworks();

                setTimeout(() => {
                    toggleFireworks();
                }, 6000);
            }
            scoreEl.innerHTML = `${score} / ${quizLen}`;
            scoreboardEl.setAttribute("style", "left: 50%;");
        }
    }, 2000);

    // showFireworks()
}

function toggleFireworks() {
    let fireworksEl = document.querySelector(".fireworks");
    fireworksEl.classList.toggle("show");
}

function playAgain() {
    location.reload();
}


</script>

