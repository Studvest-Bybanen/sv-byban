<script>
let quizzes = [
    { 
        "question": "How can we motivate Ole?",
        "answers": ["juice", "meny fresh juice", "pizza"],
        "correct": "meny fresh juice"
    },
    { 
        "question": "How can we motivate Aggi?",
        "answers": ["ice cream", "kebab", "kare-kare"],
        "correct": "kare-kare"
    },
    { 
        "question": "How can we motivate Nick?",
        "answers": ["ice cream", "cappucino", "chocolates"],
        "correct": "cappucino"
    }
]

let boxCont = document.querySelector(".box-cont");
quizzes.reverse();
quizzes.map((quiz, index) => {
    const quizContEl = `
        <style>
            div.quiz-cont {
                height: 18rem;
                width: 26.6rem;
                display: flex;
                padding: 2rem 5rem 5rem 5rem;
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
                border-radius: 1rem;
                border: 1px solid #DCDBDB;
                background: #FFF;
                box-shadow: 4px 4px 8px 0px rgba(0, 0, 0, 0.25);
                position: absolute;
                top: 30%;
                left: 50%;
                transform: translateX(-50%);
                h2 {
                    padding-left: 2rem;
                }
                ul {
                    padding: 0;
                    list-style-type: none;
                    display: flex;
                    flex-direction: column;
                    gap: 1rem;
                    margin: auto;
                    width: 85%;

                    li {
                        background: #f1f1f1;
                        border: 0;
                        padding: 1rem 2rem;
                        border-radius: 2rem;
                        font-size: 1.25rem;

                        button {
                            /* padding: 0.5rem 1rem; */
                            /* width: 100%; */

                            font-size: 1.25rem;
                            cursor: pointer;
                            border: 0;
                            background-color: transparent;
                            /* background-color: black; */
                        }
                    }
                }
            }

            div.quiz-cont:nth-of-type(1) {
                left: -50%;
            }
        </style>
        <div class="quiz-cont" id="question-${index}">
            <h2>${quiz.question}</h2>
            <ul>
                ${quiz.answers.map(answer => `<li class="${answer == quiz.correct ? "correct" : ""}"">${answer}</li>`).join('')}
            </ul>
        </div>
    `;

    boxCont.innerHTML += quizContEl;

});

    let question1 = document.getElementById("question-1");
    let question2 = document.getElementById("question-2");
    let progress1 = document.getElementById("progress-1");
    let progress2 = document.getElementById("progress-2");
    let ulEl = document.querySelector("li:nth-of-type(2)");

    console.log(ulEl)

    ulEl?.addEventListener("click", ()=> {
        ulEl!.setAttribute("style", "border: 2px solid green;");
        progress1!.setAttribute("style", "background-color: green;");

        setTimeout(() => {
            question1!.setAttribute("style", "left: -100%;");
            question2!.setAttribute("style", "left: 50%;");
        }, 2000);
    })

    ulEl?.addEventListener("click", ()=> {
        ulEl!.setAttribute("style", "border: 2px solid green;");
        progress1!.setAttribute("style", "background-color: green;");

        setTimeout(() => {
            question1!.setAttribute("style", "left: -100%;");
            question2!.setAttribute("style", "left: 50%;");
        }, 2000);
    })
    


// function correct() {
